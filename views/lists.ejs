<!DOCTYPE html>
<html lang="en">
  <% include ./partials/_headers %>
  <body>
    <main class = "container">
      <div class = "row">
        <div class="col-md-9">
          <section class = "listandMaps">
            <section id="lid_info">
              <h3> <b> <% listInfo.title %> </b> <% listInfo.description %> </h3>
                <div method="POST" action="/maps/new">
                  <input type="submit" value="Add Map">
                </div>
                <div method="POST" action="/<% listInfo.l_id %>/addContributor">
                  <input type="text" name="username">
                  <input type="submit" value="Add Contributor">
                </div>
            </section>
            <section class="showMaps">

              <% maps.forEach(function (mlist) { %>

                  <b> <%= mlist.title  %> </b> <%= mlist.description %>
                  <a href="/maps/<%= mlist.m_id %>" class="btn btn-primary"> Show Map </a>
                  <div method="POST" action="/maps/<%= mlist.mid %>/delete">
                    <input type="submit" value="Delete" class="btn btn-warning">
                  </div>

              <% }); %>

            </section>
          </section>
        </div>
        <div class="col-mid-3">
          <section id="lid_contributors">
            <h3> List of contributors </h3>
            <ul>
            <% contributors.forEach(function (contlist) { %>
              <li>
                <%= contlist.username %>
                  <a href="/profiles/<%= contlist.username %>" class="btn btn-primary"> View User </a>
              </li>
            <% }); %>
            </ul>
          </section>
        </div>
      </div>
    </main>
  </body>
</html>
