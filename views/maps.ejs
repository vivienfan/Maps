  </head>

  <body data-mid="<%=mid%>">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">MAPS</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
          </ul>
          <div class="navbar-form navbar-right">
              <button id="login_nav" type="button" class="btn btn-primary" data-toggle="modal" data-target=".login-modal">Login</button>
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".register-modal"> Register</button>
          </div>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Menu <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="#">Your profile</li>
                <li><a href="#">Maps</a></li>
                <li><a href="#">Something else here</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="#">Logout</a></li>
              </ul>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <div class="modal fade login-modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <section id="login_container">
            <div>
              <label for="email_id" class ="labelLogEmail">Email id </label>
              <input class="login_email" type="email" name="email"> <br>
              <label for="password">Password</label>
              <input class="login_password" type="password" name="password"> <br>
              <button id = "login"> Login </button>
            </div>
          </section>'
        </div>
      </div>
    </div>

    <div class="modal fade register-modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <section id="register_container">
              <div>
                <label for="email_id" class="labelRegEmail">Email id </label>
                <input class="email" type="email" name="email"> <br>
                <label for="password">Password</label>
                <input class="password" type="password" name="password"> <br>
                <label for="username">Username</label>
                <input class="username" type="text" name="username"> <br>
                <button id="register">Register</button>
              </div>
            </section>
        </div>
      </div>
    </div>


  <main class = "container" style="padding: 0px; ">
    <div class="col-md-8 my_map">
      <div id="leafletmap" style="width:780px; height: 400px;"></div>
    </div>
    <div id="points-list" class="col-md-3">
    </div>
  </main>

  <div class="modal fade" id="add-point-modal" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Create A New Point</h4>
        </div>
        <div class="modal-body">
          <label>Title:</label>
          <br>
          <input class="textbox-title" type="text"></input>
          <br>
          <label>Description:</label>
          <br>
          <textarea class="textbox-description"></textarea>
          <br>
          <label>Image:</label>
          <br>
          <input class="textbox-image"></input>
        </div>
        <div class="modal-footer">
          <button id="add-new-point">Add</button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="edit-point-modal" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Edit Point</h4>
        </div>
        <div class="modal-body">
          <label>Title:</label>
          <br>
          <input class="textbox-title" type="text"></input>
          <br>
          <label>Description:</label>
          <br>
          <textarea class="textbox-description"></textarea>
          <br>
          <label>Image:</label>
          <br>
          <input class="textbox-image"></input>
        </div>
        <div class="modal-footer">
          <button id="edit-point">Save</button>
        </div>
      </div>
    </div>
  </div>

  </body>
</html>
